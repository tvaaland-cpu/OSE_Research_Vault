<Window x:Class="OseResearchVault.App.CreateMetricDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Metric"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Grid Margin="16" MinWidth="540">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Company" FontWeight="SemiBold"/>
        <ComboBox x:Name="CompanyCombo" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" DisplayMemberPath="DisplayName" SelectedValuePath="Id" IsTextSearchEnabled="True"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Metric name" FontWeight="SemiBold"/>
        <TextBox x:Name="MetricNameText" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Period" FontWeight="SemiBold"/>
        <TextBox x:Name="PeriodText" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Value" FontWeight="SemiBold"/>
        <TextBox x:Name="ValueText" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Unit" FontWeight="SemiBold"/>
        <ComboBox x:Name="UnitCombo" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8" IsEditable="True">
            <ComboBoxItem Content="NOKm"/>
            <ComboBoxItem Content="USDm"/>
            <ComboBoxItem Content="%"/>
            <ComboBoxItem Content="bps"/>
            <ComboBoxItem Content="NOK"/>
            <ComboBoxItem Content="USD"/>
            <ComboBoxItem Content="count"/>
        </ComboBox>

        <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Currency" FontWeight="SemiBold"/>
        <TextBox x:Name="CurrencyText" Grid.Row="5" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Top" Text="Document" FontWeight="SemiBold"/>
        <TextBox x:Name="DocumentTitleText" Grid.Row="6" Grid.Column="1" Margin="0,0,0,8" IsReadOnly="True"/>

        <TextBlock Grid.Row="7" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Top" Text="Evidence" FontWeight="SemiBold"/>
        <TextBox x:Name="EvidenceText" Grid.Row="7" Grid.Column="1" Margin="0,0,0,8" Height="120" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="90" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="Save" Width="90" IsDefault="True" Click="Save_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
