<Window x:Class="OseResearchVault.App.PublishMemoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Publish Memo"
        Height="330"
        Width="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create a single-file share output for this memo." Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Format" Margin="0,0,0,4"/>
            <ComboBox x:Name="FormatComboBox" SelectedIndex="0">
                <ComboBoxItem Content="Markdown" Tag="markdown"/>
                <ComboBoxItem Content="PDF (not available in this build)" Tag="pdf" IsEnabled="False"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Redaction profile" Margin="0,0,0,4"/>
            <ComboBox x:Name="ProfileComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="ProfileId"
                      MinWidth="260"/>
        </StackPanel>

        <GroupBox Grid.Row="3" Header="Appendix">
            <StackPanel Margin="8">
                <CheckBox x:Name="IncludeCitationsCheckBox" Content="Include citations list" IsChecked="True" Margin="0,0,0,6"/>
                <CheckBox x:Name="IncludeExcerptsCheckBox" Content="Include evidence excerpts" IsChecked="False"/>
            </StackPanel>
        </GroupBox>

        <TextBlock Grid.Row="4" x:Name="HintText" Foreground="#FF4A5568" TextWrapping="Wrap" Margin="0,8,0,0"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" Margin="0,0,8,0" IsDefault="True" Content="Publish" Click="Publish_OnClick"/>
            <Button Width="90" IsCancel="True" Content="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
