<Window x:Class="OseResearchVault.App.CloneWorkspaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clone Workspace" Height="250" Width="540" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="New workspace name"/>
        <TextBox x:Name="WorkspaceNameTextBox" Grid.Row="1" Margin="0,4,0,10"/>

        <TextBlock Grid.Row="2" Text="Destination folder"/>
        <DockPanel Grid.Row="3" Margin="0,4,0,0">
            <TextBox x:Name="DestinationFolderTextBox" DockPanel.Dock="Left" Margin="0,0,8,0" MinWidth="390"/>
            <Button Content="Browseâ€¦" Width="90" Click="BrowseFolder_OnClick"/>
        </DockPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="Cancel_OnClick"/>
            <Button Content="Clone" Width="90" IsDefault="True" Click="Clone_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
