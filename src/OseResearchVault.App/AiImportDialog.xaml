<Window x:Class="OseResearchVault.App.AiImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import AI Output"
        Width="700"
        Height="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" Width="100" Margin="0,0,8,0" Click="Cancel_OnClick"/>
            <Button Content="Save" Width="100" Click="Save_OnClick"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Import AI Output" FontSize="22" FontWeight="SemiBold" Margin="0,0,0,12"/>

                <TextBlock Text="Model"/>
                <TextBox x:Name="ModelTextBox" Margin="0,4,0,10"/>

                <TextBlock Text="Prompt"/>
                <TextBox x:Name="PromptTextBox" Margin="0,4,0,10" Height="120" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>

                <TextBlock Text="Response"/>
                <TextBox x:Name="ResponseTextBox" Margin="0,4,0,10" Height="220" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>

                <TextBlock Text="Sources (optional text list)"/>
                <TextBox x:Name="SourcesTextBox" Margin="0,4,0,0" Height="120" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
