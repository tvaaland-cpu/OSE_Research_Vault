<Window x:Class="OseResearchVault.App.QuickCaptureDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:OseResearchVault.App.ViewModels"
        Title="Quick Capture"
        Width="620"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" Width="100" Margin="0,0,8,0" Click="Cancel_OnClick"/>
            <Button Content="Capture URL" Width="100" Margin="0,0,8,0" Click="CaptureUrl_OnClick"/>
            <Button Content="Capture Note" Width="100" Margin="0,0,8,0" Click="CaptureText_OnClick"/>
            <Button Content="AI Import" Width="100" Click="OpenAiImport_OnClick"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Quick Capture" FontSize="22" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock Text="Capture a URL, text snippet, or hand off to AI import." Foreground="#FF4A5568" Margin="0,0,0,14"/>

                <TextBlock Text="Company scope"/>
                <ComboBox x:Name="CompanyComboBox" Margin="0,4,0,12" DisplayMemberPath="DisplayName" SelectedIndex="0"/>

                <TextBlock Text="URL (captures HTML snapshot into Documents)"/>
                <TextBox x:Name="UrlTextBox" Margin="0,4,0,12"/>

                <TextBlock Text="Text snippet / AI output"/>
                <TextBox x:Name="TextTextBox"
                         Margin="0,4,0,0"
                         Height="260"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
