<Window x:Class="OseResearchVault.App.ExportResearchPackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Research Pack"
        Height="260"
        Width="440"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Choose export options for this research pack." Margin="0,0,0,10"/>

        <CheckBox x:Name="ApplyRedactionCheckBox"
                  Grid.Row="1"
                  Content="Apply redaction"
                  IsChecked="True"
                  Margin="0,0,0,8"
                  Checked="ApplyRedactionCheckBox_OnChanged"
                  Unchecked="ApplyRedactionCheckBox_OnChanged"/>

        <StackPanel Grid.Row="2" Margin="20,0,0,8">
            <TextBlock Text="Redaction profile" Margin="0,0,0,4"/>
            <ComboBox x:Name="ProfileComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="ProfileId"
                      MinWidth="260"/>
        </StackPanel>

        <CheckBox x:Name="ExcludePrivateCheckBox"
                  Grid.Row="3"
                  Content="Exclude private tagged items"
                  IsChecked="True"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" Margin="0,0,8,0" IsDefault="True" Content="Export" Click="Export_OnClick"/>
            <Button Width="90" IsCancel="True" Content="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
