<Window x:Class="OseResearchVault.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="OSE Research Vault"
        Width="1280"
        Height="800"
        MinWidth="980"
        MinHeight="620">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF1C2432" Padding="16">
            <StackPanel>
                <TextBlock Foreground="White" FontSize="20" FontWeight="Bold" Text="OSE Research Vault" Margin="0,0,0,24" />
                <ListBox ItemsSource="{Binding NavigationItems}" SelectedItem="{Binding SelectedItem}" BorderThickness="0" Background="Transparent" Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" FontSize="16" Margin="4,8" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20" Visibility="{Binding IsDashboardSelected, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Portfolio Dashboard" FontSize="28" FontWeight="SemiBold" />
                <TextBlock Text="{Binding DashboardStatusMessage}" Margin="0,6,0,0" Foreground="#FF2D3748" />
                <Button Content="Generate Weekly Review" Width="180" Margin="0,8,0,0" Click="GenerateWeeklyReview_OnClick"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="Position filter" FontWeight="SemiBold" />
                    <ComboBox SelectedItem="{Binding DashboardPositionFilter}" Margin="0,4,0,0">
                        <sys:String>Open</sys:String>
                        <sys:String>Closed</sys:String>
                        <sys:String>All</sys:String>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="8,0">
                    <TextBlock Text="Currency" FontWeight="SemiBold" />
                    <ComboBox ItemsSource="{Binding DashboardCurrencyOptions}" SelectedItem="{Binding DashboardCurrencyFilter}" Margin="0,4,0,0"/>
                </StackPanel>
                <WrapPanel Grid.Column="2" HorizontalAlignment="Right">
                    <Border BorderBrush="#FFE2E8F0" BorderThickness="1" CornerRadius="6" Padding="10" Margin="6,0">
                        <StackPanel><TextBlock Text="Invested" FontWeight="SemiBold"/><TextBlock Text="{Binding DashboardTotalInvested}"/></StackPanel>
                    </Border>
                    <Border BorderBrush="#FFE2E8F0" BorderThickness="1" CornerRadius="6" Padding="10" Margin="6,0">
                        <StackPanel><TextBlock Text="Market Value" FontWeight="SemiBold"/><TextBlock Text="{Binding DashboardTotalMarketValue}"/></StackPanel>
                    </Border>
                    <Border BorderBrush="#FFE2E8F0" BorderThickness="1" CornerRadius="6" Padding="10" Margin="6,0">
                        <StackPanel><TextBlock Text="Unrealized P&amp;L" FontWeight="SemiBold"/><TextBlock Text="{Binding DashboardTotalUnrealizedPnl}"/></StackPanel>
                    </Border>
                    <Border BorderBrush="#FFE2E8F0" BorderThickness="1" CornerRadius="6" Padding="10" Margin="6,0">
                        <StackPanel><TextBlock Text="Realized P&amp;L" FontWeight="SemiBold"/><TextBlock Text="{Binding DashboardTotalRealizedPnl}"/></StackPanel>
                    </Border>
                </WrapPanel>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Biggest winner: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding DashboardBiggestWinner}" Margin="0,0,16,0"/>
                    <TextBlock Text="Biggest loser: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding DashboardBiggestLoser}"/>
                </StackPanel>
                <DataGrid Grid.Row="1" ItemsSource="{Binding DashboardRows}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Company" Binding="{Binding Company}" Width="2*"/>
                        <DataGridTextColumn Header="Currency" Binding="{Binding Currency}" Width="*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="*"/>
                        <DataGridTextColumn Header="Avg Cost" Binding="{Binding AverageCost}" Width="*"/>
                        <DataGridTextColumn Header="Last Price" Binding="{Binding LastPrice}" Width="*"/>
                        <DataGridTextColumn Header="Market Value" Binding="{Binding MarketValue}" Width="*"/>
                        <DataGridTextColumn Header="P&amp;L" Binding="{Binding Pnl}" Width="*"/>
                        <DataGridTextColumn Header="Allocation" Binding="{Binding Allocation}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Margin="20" Visibility="{Binding IsCompaniesSelected, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Companies" FontSize="28" FontWeight="SemiBold" />
                <TextBlock Text="{Binding CompanyStatusMessage}" Foreground="#FF2D3748" Margin="0,6,0,0"/>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions><ColumnDefinition Width="2*"/><ColumnDefinition Width="12"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <DataGrid Grid.Column="0" ItemsSource="{Binding Companies}" SelectedItem="{Binding SelectedCompany}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Ticker" Binding="{Binding Ticker}" Width="*"/>
                        <DataGridTextColumn Header="ISIN" Binding="{Binding Isin}" Width="*"/>
                        <DataGridTextColumn Header="Sector" Binding="{Binding Sector}" Width="*"/>
                        <DataGridTextColumn Header="Tags" Binding="{Binding Tags}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto"><StackPanel>
                    <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" ToolTip="Name"/>
                    <TextBox Text="{Binding CompanyTicker}" Margin="0,0,0,8" ToolTip="Ticker"/>
                    <TextBox Text="{Binding CompanyIsin}" Margin="0,0,0,8" ToolTip="ISIN"/>
                    <TextBox Text="{Binding CompanySector}" Margin="0,0,0,8" ToolTip="Sector"/>
                    <TextBox Text="{Binding CompanyIndustry}" Margin="0,0,0,8" ToolTip="Industry"/>
                    <TextBox Text="{Binding CompanyCurrency}" Margin="0,0,0,8" ToolTip="Currency"/>
                    <TextBox Text="{Binding CompanySummary}" AcceptsReturn="True" Height="80" TextWrapping="Wrap" Margin="0,0,0,8" ToolTip="Summary"/>
                    <TextBlock Text="Tags" FontWeight="SemiBold"/>
                    <ItemsControl ItemsSource="{Binding AvailableTags}" Margin="0,4,0,8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBox Width="180" Text="{Binding NewTagName, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Add Tag" Margin="8,0,0,0" Command="{Binding AddTagCommand}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="New" Command="{Binding NewCompanyCommand}"/>
                        <Button Content="Save" Margin="8,0,0,0" Command="{Binding SaveCompanyCommand}"/>
                        <Button Content="Delete" Margin="8,0,0,0" Command="{Binding DeleteCompanyCommand}"/>
                    </StackPanel>
                </StackPanel></ScrollViewer>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Margin="20" Visibility="{Binding IsDocumentsSelected, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Documents" FontSize="28" FontWeight="SemiBold" />
                <TextBlock Text="Drag and drop files into the list to import into vault storage." Foreground="#FF4A5568" />
                <TextBlock Text="{Binding DocumentStatusMessage}" Margin="0,6,0,0" Foreground="#FF2D3748" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions><ColumnDefinition Width="2*"/><ColumnDefinition Width="12"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <Border Grid.Column="0" AllowDrop="True" Drop="DocumentDropArea_OnDrop" DragOver="DocumentDropArea_OnDragOver">
                    <DataGrid ItemsSource="{Binding Documents}" SelectedItem="{Binding SelectedDocument}" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                            <DataGridTextColumn Header="Company" Binding="{Binding Company}" Width="*" />
                            <DataGridTextColumn Header="Published date" Binding="{Binding PublishedDate}" Width="*" />
                            <DataGridTextColumn Header="Imported date" Binding="{Binding ImportedDate}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Link to company" FontWeight="SemiBold"/>
                    <ComboBox ItemsSource="{Binding CompanyOptions}" SelectedItem="{Binding SelectedDocumentCompany}" DisplayMemberPath="DisplayName" Margin="0,4,0,8"/>
                    <Button Content="Save Link" Command="{Binding SaveDocumentCompanyCommand}" Width="120" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding DetailsSummary}" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" />
                    <TextBlock Text="Extracted text preview" Margin="0,12,0,4" FontWeight="SemiBold" />
                    <TextBox x:Name="DocumentPreviewTextBox" Text="{Binding DetailsTextPreview}" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" MinHeight="220" SelectionChanged="DocumentPreviewTextBox_OnSelectionChanged" />
                    <Button x:Name="CreateSnippetButton" Content="Create Snippet" Width="130" Margin="0,8,0,8" IsEnabled="False" Click="CreateSnippet_OnClick"/>
                    <GroupBox Header="Snippets" Margin="0,4,0,0">
                        <ListBox ItemsSource="{Binding DocumentSnippets}" MinHeight="120" MaxHeight="220">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="{Binding Locator}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding CreatedAt}" FontSize="11" Foreground="#FF4A5568"/>
                                        <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                                        <Button Content="Create Metric..." Width="130" Margin="0,6,0,0" Click="CreateMetricFromSnippet_OnClick"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Margin="20" Visibility="{Binding IsNotesSelected, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Notes" FontSize="28" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Company" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Width="220" ItemsSource="{Binding NoteFilterCompanies}" SelectedItem="{Binding NotesFilterCompany}" DisplayMemberPath="DisplayName" Margin="0,0,16,0"/>
                    <TextBlock Text="Type" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Width="160" ItemsSource="{Binding NoteFilterTypes}" SelectedItem="{Binding NotesFilterType}"/>
                </StackPanel>
                <TextBlock Text="{Binding NoteStatusMessage}" Margin="0,6,0,0" Foreground="#FF2D3748" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions><ColumnDefinition Width="2*"/><ColumnDefinition Width="12"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <DataGrid Grid.Column="0" ItemsSource="{Binding Notes}" SelectedItem="{Binding SelectedNote}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding NoteType}" Width="*"/>
                        <DataGridTextColumn Header="Company" Binding="{Binding CompanyName}" Width="*"/>
                        <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Column="2">
                    <TextBox Text="{Binding NoteTitle, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" ToolTip="Title"/>
                    <ComboBox ItemsSource="{Binding NoteTypes}" SelectedItem="{Binding SelectedNoteType}" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding CompanyOptions}" SelectedItem="{Binding SelectedNoteCompany}" DisplayMemberPath="DisplayName" Margin="0,0,0,8"/>
                    <TextBlock Text="Markdown" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding NoteContent}" AcceptsReturn="True" TextWrapping="Wrap" Height="220" Margin="0,0,0,8" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Import AI Output" Click="ImportAiOutput_OnClick" Margin="0,0,8,0"/>
                        <Button Content="New" Command="{Binding NewNoteCommand}"/>
                        <Button Content="Save" Margin="8,0,0,0" Command="{Binding SaveNoteCommand}"/>
                        <Button Content="Delete" Margin="8,0,0,0" Command="{Binding DeleteNoteCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>


        <Grid Grid.Column="1" Margin="20" Visibility="{Binding IsAgentsSelected, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Agents" FontSize="28" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding AgentStatusMessage}" Margin="0,6,0,0" Foreground="#FF2D3748" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions><ColumnDefinition Width="2*"/><ColumnDefinition Width="12"/><ColumnDefinition Width="3*"/></Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions><RowDefinition Height="*"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                    <GroupBox Header="Agent Templates" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                            <DataGrid Grid.Column="0" ItemsSource="{Binding AgentTemplates}" SelectedItem="{Binding SelectedAgentTemplate}" AutoGenerateColumns="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Goal" Binding="{Binding Goal}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBox Text="{Binding AgentName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" ToolTip="name"/>
                                <TextBox Text="{Binding AgentGoal}" Margin="0,0,0,6" ToolTip="goal"/>
                                <TextBox Text="{Binding AgentInstructions}" AcceptsReturn="True" Height="80" Margin="0,0,0,6" ToolTip="instructions"/>
                                <TextBox Text="{Binding AgentAllowedTools}" Margin="0,0,0,6" ToolTip="allowed_tools JSON list"/>
                                <TextBox Text="{Binding AgentOutputSchema}" AcceptsReturn="True" Height="60" Margin="0,0,0,6" ToolTip="output_schema"/>
                                <TextBox Text="{Binding AgentEvidencePolicy}" Margin="0,0,0,6" ToolTip="evidence_policy"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="New" Command="{Binding NewAgentTemplateCommand}"/>
                                    <Button Content="Save" Margin="8,0,0,0" Command="{Binding SaveAgentTemplateCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="Run History">
                        <DataGrid ItemsSource="{Binding AgentRuns}" SelectedItem="{Binding SelectedAgentRun}" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Agent" Binding="{Binding AgentName}" Width="*"/>
                                <DataGridTextColumn Header="Company" Binding="{Binding CompanyName}" Width="*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                                <DataGridTextColumn Header="Started" Binding="{Binding StartedAt}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                    <GroupBox Header="Ask My Vault" Margin="0,0,0,8">
                        <StackPanel>
                            <ComboBox ItemsSource="{Binding CompanyOptions}" SelectedItem="{Binding SelectedRunCompany}" DisplayMemberPath="DisplayName" Margin="0,0,0,6"/>
                            <TextBlock Text="Select local documents to include" FontWeight="SemiBold"/>
                            <ListBox ItemsSource="{Binding RunSelectableDocuments}" Height="120" Margin="0,4,0,6">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Title}" IsChecked="{Binding IsSelected}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <TextBox Text="{Binding AgentQuery}" AcceptsReturn="True" Height="60" Margin="0,0,0,6" ToolTip="query"/>
                            <Button Content="Answer" Width="140" Command="{Binding RunAgentCommand}"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="Lab Notebook">
                        <Grid>
                            <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                            <TextBox Text="{Binding RunInputSummary}" IsReadOnly="True" TextWrapping="Wrap" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="1" Text="{Binding RunToolCallsSummary}" Margin="0,0,0,6"/>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="2*"/></Grid.ColumnDefinitions>
                                <ListBox ItemsSource="{Binding RunArtifacts}" SelectedItem="{Binding SelectedRunArtifact}" DisplayMemberPath="Title" Margin="0,0,6,0"/>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBox Text="{Binding SelectedRunArtifact.Content, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="180" TextWrapping="Wrap"/>
                                    <Button Content="Save Artifact Output" Width="160" Margin="0,6,0,0" Command="{Binding SaveArtifactCommand}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,6">
                                        <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#FFE53E3E"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasEvidenceCoverage}" Value="True">
                                                            <Setter Property="Fill" Value="#FF38A169"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding EvidenceCoverageLabel}" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#FFC53030"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasEvidenceCoverage}" Value="True">
                                                            <Setter Property="Foreground" Value="#FF2F855A"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    <ItemsControl ItemsSource="{Binding ArtifactEvidenceLinks}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#FFE2E8F0" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,0,0,6">
                                                    <StackPanel>
                                                        <DockPanel>
                                                            <TextBlock Text="{Binding DocumentTitle}" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                                                            <Button Content="Copy citation"
                                                                    Click="CopyCitation_OnClick"
                                                                    Tag="{Binding Citation}"
                                                                    HorizontalAlignment="Right"
                                                                    Padding="8,2"/>
                                                        </DockPanel>
                                                        <TextBlock Text="{Binding Quote}" TextWrapping="Wrap" Foreground="#FF4A5568" Margin="0,4,0,4"/>
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                            <TextBlock Text="Locator: " FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding Locator}"/>
                                                            <Border Background="#FFFEEBC8" CornerRadius="4" Padding="5,1" Margin="8,0,0,0" Visibility="{Binding HasMissingLocator, Converter={StaticResource BoolToVisibility}}">
                                                                <TextBlock Text="Missing locator" Foreground="#FF975A16" FontSize="11" FontWeight="SemiBold"/>
                                                            </Border>
                                                        </StackPanel>
                                                        <TextBlock>
                                                            <Run Text="Snippet ID: " FontWeight="SemiBold"/>
                                                            <Run Text="{Binding SnippetId}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <GroupBox Header="Artifact Evidence" Margin="0,10,0,0">
                                        <StackPanel>
                                            <Button Content="Create Snippet &amp; Link..." Width="180" Click="CreateSnippetAndLink_OnClick"/>
                                        </StackPanel>
                                    </GroupBox>
                                </StackPanel>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,6">
                                        <Button Content="Save Artifact Output" Width="160" Command="{Binding SaveArtifactCommand}"/>
                                        <Button Content="Link Snippetâ€¦" Width="120" Margin="8,0,0,0" Click="LinkArtifactSnippet_OnClick"/>
                                    </StackPanel>
                                    <GroupBox Grid.Row="2" Header="Evidence">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="{Binding ArtifactEvidenceStatusMessage}" Margin="0,0,0,6" Foreground="#FF4A5568"/>
                                            <ListView Grid.Row="1" ItemsSource="{Binding ArtifactEvidenceLinks}">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#FFE2E8F0" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>
                                                                <DockPanel LastChildFill="False">
                                                                    <TextBlock Text="{Binding SnippetPreview}" TextWrapping="Wrap" Width="420"/>
                                                                    <Button Content="Remove" Margin="8,0,0,0" Padding="8,2" Click="RemoveEvidenceLink_OnClick" Tag="{Binding EvidenceLinkId}"/>
                                                                </DockPanel>
                                                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
                                                                    <TextBlock Text="Locator: " FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding Locator}" Margin="0,0,12,0"/>
                                                                    <TextBlock Text="Source: " FontWeight="SemiBold"/>
                                                                    <TextBlock Margin="0,0,12,0">
                                                                        <Hyperlink Click="EvidenceDocumentLink_OnClick" Tag="{Binding DocumentId}">
                                                                            <Run Text="{Binding DocumentTitle}"/>
                                                                        </Hyperlink>
                                                                    </TextBlock>
                                                                    <TextBlock Text="Company: " FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding CompanyName}"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
        </Grid>


        <Grid Grid.Column="1" Margin="20" Visibility="{Binding IsAutomationsSelected, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Automations" FontSize="28" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding AutomationStatusMessage}" Margin="0,6,0,0" Foreground="#FF2D3748" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="New" Command="{Binding NewAutomationCommand}"/>
                    <Button Content="Edit" Margin="8,0,0,0" Command="{Binding EditAutomationCommand}"/>
                    <Button Content="Delete" Margin="8,0,0,0" Command="{Binding DeleteAutomationCommand}"/>
                    <Button Content="Run now" Margin="8,0,0,0" Command="{Binding RunAutomationNowCommand}"/>
                    <Button Content="Enable toggle" Margin="8,0,0,0" Command="{Binding ToggleAutomationEnabledCommand}"/>
                </StackPanel>
                <DataGrid Grid.Row="1" ItemsSource="{Binding Automations}" SelectedItem="{Binding SelectedAutomation}" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,8">
                    <DataGrid.Columns>
