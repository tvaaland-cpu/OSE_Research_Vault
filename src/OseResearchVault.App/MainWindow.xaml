            </TabControl>
        </Grid>


        <Grid Grid.Column="1" Margin="20" Visibility="{Binding IsSettingsSelected, Converter={StaticResource BoolToVisibility}}">
            <StackPanel Width="640">
                <TextBlock Text="Settings" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,12"/>
                <GroupBox Header="Import Inbox" Padding="12">
                    <StackPanel>
                        <CheckBox Content="Enable auto-import for inbox folder" IsChecked="{Binding ImportInboxEnabled}" Margin="0,0,0,8"/>
                        <TextBlock Text="Folder path" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding ImportInboxFolderPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                        <Button Content="Save Inbox Settings" Width="160" Command="{Binding SaveImportInboxSettingsCommand}"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Workspace" Padding="12" Margin="0,12,0,0">
                    <StackPanel>
                        <Button Content="Export backupâ€¦" Width="160" Click="ExportWorkspaceBackup_OnClick"/>
                        <ProgressBar x:Name="WorkspaceBackupProgress" IsIndeterminate="True" Height="8" Margin="0,10,0,0" Visibility="Collapsed"/>
                        <TextBlock x:Name="WorkspaceBackupStatusText" Margin="0,8,0,0" Foreground="#FF4A5568"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Background="#FFF8FAFC">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsCompaniesSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsDocumentsSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsNotesSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsCompanyHubSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsSearchSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsAgentsSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsDataQualitySelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsAutomationsSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsSettingsSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsInboxSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsAutomationsSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                        <DataTrigger Binding="{Binding IsAskMyVaultSelected}" Value="True"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="520">
                <TextBlock Text="This section is under construction." FontSize="24" FontWeight="SemiBold" TextAlignment="Center" />
                <TextBlock Text="Use Companies, Documents, Notes, and Company Hub to manage research workflows." TextAlignment="Center" Margin="0,10,0,0" Foreground="#FF4A5568" TextWrapping="Wrap" />
            </StackPanel>
        </Grid>

        <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Padding="12,8" CornerRadius="8" Background="#FF1A202C" Visibility="{Binding IsToastVisible, Converter={StaticResource BoolToVisibility}}">
            <TextBlock Text="{Binding ToastMessage}" Foreground="White" MaxWidth="360" TextWrapping="Wrap"/>
        </Border>
    
        <Grid Grid.Column="1" Margin="20" Visibility="{Binding IsConnectorsSelected, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Connectors" FontSize="28" FontWeight="SemiBold" />
                <TextBlock Text="Run connectors to snapshot external sources into Documents." Foreground="#FF4A5568" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions><ColumnDefinition Width="2*"/><ColumnDefinition Width="12"/><ColumnDefinition Width="3*"/></Grid.ColumnDefinitions>
                <DataGrid Grid.Column="0" ItemsSource="{Binding Connectors}" SelectedItem="{Binding SelectedConnector}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Connector" Binding="{Binding DisplayName}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Input (URL or CSV path)" FontWeight="SemiBold"/>
                    <TextBox Margin="0,4,0,8" Text="{Binding ConnectorUrl, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Run" Width="120" Command="{Binding RunConnectorCommand}"/>
                    <TextBlock Margin="0,12,0,0" Text="{Binding ConnectorRunResult}" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Grid>
</Grid>
</Window>
