<Window x:Class="OseResearchVault.App.QuarterlyReviewPeriodDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate Quarterly Review"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Period label (YYYYQ#)" Margin="0,0,0,6"/>
        <TextBox Grid.Row="1" Width="180" Text="{Binding PeriodLabel, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" Width="80" IsCancel="True" Margin="0,0,8,0"/>
            <Button Content="Generate" Width="90" IsDefault="True" Click="Generate_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
