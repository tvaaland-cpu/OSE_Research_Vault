<Window x:Class="OseResearchVault.App.CommandPaletteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Command Palette"
        Width="640"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        KeyDown="Window_OnKeyDown"
        Background="#FF0F172A">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="QueryTextBox"
                 Height="36"
                 FontSize="16"
                 VerticalContentAlignment="Center"
                 TextChanged="QueryTextBox_OnTextChanged"
                 ToolTip="Search commands and companies"/>

        <ListBox x:Name="ResultsListBox"
                 Grid.Row="1"
                 Margin="0,12,0,0"
                 MouseDoubleClick="ResultsListBox_OnMouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="4,4,4,8">
                        <TextBlock Text="{Binding Label}" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Hint}" Foreground="#FFCBD5E1" FontSize="12"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
